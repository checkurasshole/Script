    print("Reset button clicked")
    
    -- Create confirmation popup
    local confirmFrame = Instance.new("Frame")
    confirmFrame.Name = "ConfirmFrame"
    confirmFrame.Size = UDim2.new(0, (isMobile and 280 or 350) * currentScale, 0, (isMobile and 150 or 180) * currentScale)
    confirmFrame.Position = UDim2.new(0.5, (isMobile and -140 or -175) * currentScale, 0.5, (isMobile and -75 or -90) * currentScale)
    confirmFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 45)
    confirmFrame.BackgroundTransparency = 0.05
    confirmFrame.BorderSizePixel = 0
    confirmFrame.ZIndex = 10
    confirmFrame.Parent = mainFrame
    
