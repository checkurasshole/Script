resetButton.Name = "ResetButton"
resetButton.Size = UDim2.new(0, (isMobile and 120 or 140) * currentScale, 0, (isMobile and 28 or 35) * currentScale)
resetButton.Position = UDim2.new(1, (isMobile and -135 or -155) * currentScale, 1, (isMobile and -40 or -50) * currentScale)
