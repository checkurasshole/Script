    confirmTitle.TextScaled = true
    confirmTitle.Parent = confirmFrame
    
    local confirmText = Instance.new("TextLabel")
    confirmText.Size = UDim2.new(1, -20, 0, (isMobile and 40 or 50) * currentScale)
    confirmText.Position = UDim2.new(0, 10 * currentScale, 0, (isMobile and 45 or 55) * currentScale)
    confirmText.BackgroundTransparency = 1
    confirmText.Text = isMobile and "This will clear saved language\nand reset auto-save settings." or "This will clear your saved language choice\nand reset all auto-save settings."
    confirmText.TextColor3 = Color3.fromRGB(220, 220, 255)
    confirmText.TextSize = (isMobile and 10 or 13) * currentScale
    confirmText.Font = Enum.Font.SourceSans
    confirmText.TextScaled = true
    confirmText.TextWrapped = true
    confirmText.Parent = confirmFrame
    
    local yesButton = Instance.new("TextButton")
    yesButton.Size = UDim2.new(0, (isMobile and 80 or 100) * currentScale, 0, (isMobile and 25 or 30) * currentScale)
    yesButton.Position = UDim2.new(0, 15 * currentScale, 1, (isMobile and -35 or -40) * currentScale)
    yesButton.BackgroundColor3 = Color3.fromRGB(255, 80, 80)
    yesButton.BorderSizePixel = 0
    yesButton.Text = "‚úì Yes, Reset"
    yesButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    yesButton.TextSize = (isMobile and 10 or 12) * currentScale
    yesButton.Font = Enum.Font.SourceSansBold
    yesButton.TextScaled = true
    yesButton.Parent = confirmFrame
    
    local yesCorner = Instance.new("UICorner")
    yesCorner.CornerRadius = UDim.new(0, (isMobile and 12 or 15) * currentScale)
    yesCorner.Parent = yesButton
    
    local noButton = Instance.new("TextButton")
    noButton.Size = UDim2.new(0, (isMobile and 80 or 100) * currentScale, 0, (isMobile and 25 or 30) * currentScale)
    noButton.Position = UDim2.new(1, (isMobile and -95 or -115) * currentScale, 1, (isMobile and -35 or -40) * currentScale)
    noButton.BackgroundColor3 = Color3.fromRGB(120, 120, 140)
    noButton.BorderSizePixel = 0
    noButton.Text = "‚úï Cancel"
    noButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    noButton.TextSize = (isMobile and 10 or 12) * currentScale
    noButton.Font = Enum.Font.SourceSansBold
    noButton.TextScaled = true
    noButton.Parent = confirmFrame
    
    local noCorner = Instance.new("UICorner")
    noCorner.CornerRadius = UDim.new(0, (isMobile and 12 or 15) * currentScale)
    noCorner.Parent = noButton
    
    -- Animate popup appearance
    confirmFrame.Position = UDim2.new(0.5, (isMobile and -140 or -175) * currentScale, 0.5, (isMobile and -200 or -250) * currentScale)
    local popupTween = TweenService:Create(confirmFrame,
        TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out),
        {Position = UDim2.new(0.5, (isMobile and -140 or -175) * currentScale, 0.5, (isMobile and -75 or -90) * currentScale)}
    )
    popupTween:Play()
    
    -- Yes button functionality
    yesButton.MouseButton1Click:Connect(function()
        print("Confirmed reset")
        
        -- Reset all settings
        savedLanguage = nil
        autoSaveEnabled = true
        currentScale = 1
        
        -- Delete save file
        local success = pcall(function()
            if isfile(SAVE_KEY .. ".json") then
                delfile(SAVE_KEY .. ".json")
            end
        end)
        
        if success then
            print("Settings reset successfully")
        else
            warn("Failed to delete settings file")
        end
        
        -- Update UI to reflect reset
        autoSaveToggle.BackgroundColor3 = Color3.fromRGB(100, 220, 120)
        toggleStroke.Color = Color3.fromRGB(140, 240, 160)
        toggleIndicator.Position = UDim2.new(1, -indicatorSize - 2 * currentScale, 0.5, -indicatorSize/2)
        
        -- Reset scale
        currentScale = 1
        updateFrameScale()
        
        -- Update all language buttons to show no selection
        for _, child in pairs(scrollFrame:GetChildren()) do
            if child:IsA("TextButton") then
                child.BackgroundTransparency = 0.6
                child.TextColor3 = Color3.fromRGB(220, 220, 255)
                local stroke = child:FindFirstChild("UIStroke")
                if stroke then
                    stroke.Color = Color3.fromRGB(100, 120, 200)
                    stroke.Transparency = 0.5
                    stroke.Thickness = 2 * currentScale
                end
            end
        end
        
        -- Close confirmation popup
        local closeTween = TweenService:Create(confirmFrame,
            TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.In),
            {Position = UDim2.new(0.5, (isMobile and -140 or -175) * currentScale, 0.5, (isMobile and -200 or -250) * currentScale)}
        )
        closeTween:Play()
        
        closeTween.Completed:Connect(function()
            confirmFrame:Destroy()
        end)
    end)
    
    -- Cancel button functionality
    noButton.MouseButton1Click:Connect(function()
        print("Reset cancelled")
        
        local closeTween = TweenService:Create(confirmFrame,
            TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.In),
            {Position = UDim2.new(0.5, (isMobile and -140 or -175) * currentScale, 0.5, (isMobile and -200 or -250) * currentScale)}
        )
        closeTween:Play()
        
        closeTween.Completed:Connect(function()
            confirmFrame:Destroy()
        end)
    end)
end)

-- Create language buttons
for languageName, scriptUrl in pairs(scripts) do
    createLanguageButton(languageName, scriptUrl)
end

local function updateCanvasSize()
    local contentSize = gridLayout.AbsoluteContentSize
    scrollFrame.CanvasSize = UDim2.new(0, contentSize.X, 0, contentSize.Y + 30 * currentScale)
end

gridLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(updateCanvasSize)
updateCanvasSize()

-- Entrance animation
mainFrame.Position = UDim2.new(0.5, -frameWidth/2, 1.2, 0)
local entranceTween = TweenService:Create(mainFrame,
    TweenInfo.new(0.8, Enum.EasingStyle.Back, Enum.EasingDirection.Out),
    {Position = UDim2.new(0.5, -frameWidth/2, 0.5, -frameHeight/2)}
)
entranceTween:Play()

-- Close button functionality
closeButton.MouseButton1Click:Connect(function()
    local exitTween = TweenService:Create(mainFrame,
        TweenInfo.new(0.6, Enum.EasingStyle.Back, Enum.EasingDirection.In),
        {Position = UDim2.new(0.5, -frameWidth/2, 1.2, 0)}
    )
    exitTween:Play()
    
    exitTween.Completed:Connect(function()
        if strokeConnection then
            strokeConnection:Disconnect()
        end
        screenGui:Destroy()
    end)
end)
