-- Key validation variable (users will paste their key here)
script_key = script_key or 'Paste Key In here'

-- GitHub repository scripts (replace with your actual GitHub URLs)
local scripts = {
    ["English ðŸ‡ºðŸ‡¸"] = "https://raw.githubusercontent.com/checkurasshole/Script/refs/heads/main/translated/en",
    ["Arabic ðŸ‡¸ðŸ‡¦"] = "https://raw.githubusercontent.com/checkurasshole/Script/main/translated/ar/translated_script_ar_2025-08-01.lua",
