    Interact = "Submit",
    Callback = function()
        local currentTime = tick()
        local timeRemaining = CONFIG.FEEDBACK_COOLDOWN - (currentTime - lastFeedbackTime)
        if timeRemaining > 0 then
            Rayfield:Notify({Title = "‚è≥ Cooldown", Content = "Wait " .. webhookSystem:formatTime(timeRemaining), Duration = 5, Image = 4483362458})
            return
        end
        if currentResponse == "" then
            Rayfield:Notify({Title = "‚ùå Error", Content = "Please enter a message!", Duration = 3, Image = 4483362458})
