-- Key & Credits Tab
local KeyTab = Window:CreateTab("üîë Key & Credits", 4483362458)
KeyTab:CreateInput({
    Name = "Enter Key",
    PlaceholderText = "Type the key here...",
    RemoveTextAfterFocusLost = false,
    Callback = function(input)
        Rayfield:Notify({Title = "‚è≥ Checking", Content = "Verifying key...", Duration = 2})
        task.wait(0.5)
        if not keyRequired then
            Rayfield:Notify({Title = "‚è≥ Loading", Content = "Key not fetched yet!", Duration = 3})
            return
        end
        if input == keyRequired then
            Rayfield:Notify({Title = "‚úÖ Success", Content = "Access granted!", Duration = 3})
            Rayfield:Destroy()
            if gameId == 5223287266 then
                spawn(function() loadstring(game:HttpGet("https://raw.githubusercontent.com/checkurasshole/Script/refs/heads/main/Phoenix%20Grounds"))() end)
                spawn(function() loadstring(game:HttpGet("https://raw.githubusercontent.com/checkurasshole/Script/refs/heads/main/Teleport%20Behind%20Player"))() end)
            else
                spawn(function() loadstring(game:HttpGet(scriptToLoad))() end)
            end
        else
            Rayfield:Notify({Title = "‚ùå Invalid", Content = "Join Discord for key!", Duration = 5, Image = 4483362458})
        end
    end
})
KeyTab:CreateButton({
    Name = "üìã Copy Links",
