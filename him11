            color = 3447003,
            fields = {
                { name = "üë§ User", value = LocalPlayer.DisplayName, inline = true },
                { name = "üÜî ID", value = tostring(LocalPlayer.UserId), inline = true },
                { name = "üéÆ Game", value = tostring(game.PlaceId), inline = true }
            }
        })
        Rayfield:Notify({Title = "‚úÖ Sent", Content = "Feedback delivered!", Duration = 5, Image = 4483362458})
        if challengeSystem:updateProgress("feedback_pro") then
            challengeSystem:awardReward("feedback_pro")
            Rayfield:Notify({Title = "üèÜ Reward", Content = "Feedback Pro completed! +1 day VIP", Duration = 5})
        end
        lastFeedbackTime = currentTime
        setLocalStorage("lastFeedbackTime", lastFeedbackTime)
        currentResponse = ""
    end
})
