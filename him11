-- Store Tab
local StoreTab = Window:CreateTab("üõí Store", 4483362458)
StoreTab:CreateSection("üíº Premium Scripts")

local storeItems = {
    {name = "Admin Commands", price = 250, id = "admin"},
    {name = "Silent Aim", price = 500, id = "silentaim"},
    {name = "Server Crasher", price = 750, id = "crasher"}
}

for _, item in ipairs(storeItems) do
    StoreTab:CreateButton({
        Name = item.name .. " - " .. item.price .. " VC",
        Callback = function()
            if vaultCredits >= item.price then
                vaultCredits = vaultCredits - item.price
                creditsParagraph:Set({Title = "üí∞ Your Credits", Content = "Balance: " .. vaultCredits .. " VC"})
                Rayfield:Notify({Title = "‚úÖ Purchased", Content = "Unlocked " .. item.name .. "!", Duration = 3})
                sendWebhook({
                    title = "üõí Store Purchase",
                    description = LocalPlayer.DisplayName .. " purchased " .. item.name,
                    color = 16776960,
                    timestamp = os.date("!%Y-%m-%dT%H:%M:%SZ")
                })
            else
                Rayfield:Notify({Title = "‚ùå Insufficient", Content = "Not enough credits!", Duration = 3})
            end
        end
    })
end

